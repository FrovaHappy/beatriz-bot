// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  discordId String   @unique
  servers   Server[] @relation(fields: [serversId], references: [id])
  serversId String[] @db.ObjectId
}

enum PermissionBot {
  public
  private
  owner
}

model Server {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  serverId      String        @unique
  permissionBot PermissionBot
  colorCommand  ColorCommand?
  users         User[]        @relation(fields: [usersId], references: [id])
  usersId       String[]      @db.ObjectId
}

model ColorCommand {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  colors         Color[]
  pointerId      String
  rolePermission String?
  server         Server  @relation(fields: [serverId], references: [serverId])
  serverId       String  @unique
}

model Color {
  id       String       @id @default(auto()) @map("_id") @db.ObjectId
  server   ColorCommand @relation(fields: [serverId], references: [id])
  serverId String       @db.ObjectId
  colorId  String
  hexColor String
}
